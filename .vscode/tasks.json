  "version": "2.0.0",
  "tasks": [
    {
      "label": "Backend",
      "type": "shell",
      "command": "CompileDaemon -command ./dmedia",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/backend",
        "env": {
